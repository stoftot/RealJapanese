@inherits PracticeShellBase

<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container py-4 scaled" style="--ui-scale:@UiScale">

        @if (ShowScaleToolbar)
        {
            <div class="row justify-content-center mb-3">
                <div class="col-auto">
                    <label class="form-label me-2 mb-0">UI size</label>
                </div>
                <div class="col-8 col-md-6 col-lg-4">
                    <input type="range"
                           class="form-range"
                           min="@Min" max="@Max" step="@Step"
                           value="@UiScale"
                           @oninput="OnScaleInput" />
                </div>
                <div class="col-auto">
                    <span class="text-muted">@($"{UiScale:P0}")</span>
                </div>
            </div>
        }

        @ChildContent
    </div>
</div>