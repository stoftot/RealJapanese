@namespace RealJapanese.Components.Shared
@inherits FillInBlanksCardBase

<div class="d-flex justify-content-center">
    <div class="practice-wrap w-100">
        <div class="card shadow-sm">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">@Header</h5>
                    @if (!string.IsNullOrWhiteSpace(ProgressText))
                    {
                        <small class="text-muted">@ProgressText</small>
                    }
                </div>

                <p class="lead mb-3">
                    @if (BlankCount == 0)
                    {
                        @Template
                    }
                    else
                    {
                        @foreach (var index in Enumerable.Range(0, BlankCount))
                        {
                            @TemplateSegments[index]

                            <span class="d-inline-flex flex-column align-items-start mx-1">
                                <input class="@GetInputCss(index)"
                                       @bind="UserInputs[index]"
                                       @bind:event="oninput" />

                                @if (ShowFeedback)
                                {
                                    <small class="@GetAnswerCss(index)">
                                        @Answers[index]
                                    </small>
                                }
                            </span>
                        }

                        @TemplateSegments[TemplateSegments.Count - 1]
                    }
                </p>


                <div class="d-flex gap-2">
                    <button class="btn btn-primary"
                            @onclick="CheckAnswers"
                            disabled="@(!CanCheck)">
                        Check answers
                    </button>

                    <button class="btn btn-outline-secondary"
                            @onclick="OnNextClicked">
                        Next question
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
