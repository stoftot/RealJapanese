@page "/greetings"
@inherits RealJapanese.Components.Pages.GreetingsBase
@rendermode InteractiveServer

<!-- Full-height flex wrapper to center the card -->
<div class="min-vh-100 d-flex align-items-center justify-content-center">

    <!-- We pass a CSS variable (--ui-scale) from Blazor into CSS -->
    <div class="container py-4 scaled" style="--ui-scale:@UiScale">
        <!-- Optional: a small toolbar for the slider -->
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <label class="form-label me-2 mb-0">UI size</label>
            </div>
            <div class="col-8 col-md-6 col-lg-4">
                <input type="range"
                       class="form-range"
                       min="0.8" max="1.6" step="0.05"
                       @bind="UiScale" />
            </div>
            <div class="col-auto">
                <span class="text-muted">@($"{UiScale:P0}")</span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">Practice</h5>
                            <small class="text-muted">
                                @(Questions.Count == 0 ? "0/0" : $"{currentQuestionIndex + 1}/{Questions.Count}")
                            </small>
                        </div>

                        <p class="lead mb-3">@CurrentQuestion</p>

                        <div class="mb-2">
                            <input class="form-control form-control-lg"
                                   placeholder="Type your answerâ€¦"
                                   @bind-value="UserInput"
                                   @bind-value:event="oninput"
                                   @onkeydown="HandleKeyDown"
                                   @ref="answerInputRef" />
                        </div>

                        @if (showAnswer)
                        {
                            <div class="alert alert-info mt-3" role="alert">
                                <strong>Answer:</strong> @CurrentAnswer
                            </div>
                        }

                        <div class="d-flex gap-2 mt-3">
                            <button type="button" class="btn btn-outline-secondary" @onclick="RevealAnswer">
                                Show answer (Enter)
                            </button>
                            <button type="button" class="btn btn-primary ms-auto" @onclick="GoToNextQuestion">
                                Next
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
