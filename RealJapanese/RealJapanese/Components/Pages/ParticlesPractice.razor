@page "/particals"
@inherits ParticlesPracticeBase
@using RealJapanese.Components.Shared
@namespace RealJapanese.Components.Pages
@rendermode InteractiveServer

<PracticeShell UiScale="@UiScale" UiScaleChanged="v => UiScale = v" ShowScaleToolbar="true">
    <div class="practice-wrap w-100">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0">Particle Practice</h5>
                    <small class="text-muted">@($"{Index + 1} / {Items.Count}")</small>
                </div>

                <FillInBlanks
                    TopText="@Items[Index].English"
                    Template="@Items[Index].JapaneseTemplate"
                    Answers="@Items[Index].MissingParticles"
                    Placeholder="__"
                    InputWidth="5.5ch"
                    SpaceAdvances="true"
                    ShowAnswerBelow="true"
                    OnChecked="HandleChecked"
                    OnAnswersChanged="HandleAnswersChanged"
                />

                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-outline-secondary" @onclick="Prev">Prev</button>
                    <button class="btn btn-primary" @onclick="Next">Next</button>
                </div>
            </div>
        </div>
    </div>
</PracticeShell>