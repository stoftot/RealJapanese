@page "/numbers"
@inherits RealJapanese.Components.Pages.NumbersBase
@using RealJapanese.Components.Shared
@rendermode InteractiveServer


<PracticeShell @bind-UiScale="UiScale">
    <PracticeCard
        Title="Practice"
        ProgressText="@(Questions.Count == 0 ? "0/0" : $"{currentQuestionIndex + 1}/{Questions.Count}")"
        Question="@CurrentQuestion"
        Answer="@CurrentAnswer"
        UserInput="@UserInput"
        UserInputChanged="@(v => UserInput = v!)"
        ShowAnswer="@showAnswer"
        RevealRequested="RevealAnswer"
        NextRequested="OnEnterPressed"
        RevealLabel="Show answer (Space)"
        NextLabel="Next"
        NextDisabled="@(Normalize(UserInput) != Normalize(CurrentAnswer))"
        OnKeyDown="HandleKeyDown"
        @ref="cardRef"/>
</PracticeShell>